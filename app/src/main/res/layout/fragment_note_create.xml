<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/note_create_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NoteCreateFragment">

    <View
        android:id="@+id/vw_note_create"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_create_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:fontFamily="@font/roboto_bold"
        app:layout_constraintEnd_toEndOf="@+id/vw_note_create"
        app:layout_constraintStart_toStartOf="@+id/vw_note_create"
        app:layout_constraintTop_toTopOf="@+id/vw_note_create"
        tools:text="Title of this note" />

    <TextView
        android:id="@+id/tv_create_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:lineSpacingExtra="2sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:fontFamily="@font/roboto_light"
        app:layout_constraintBottom_toTopOf="@+id/btn_save"
        app:layout_constraintEnd_toEndOf="@+id/vw_note_create"
        app:layout_constraintStart_toStartOf="@+id/vw_note_create"
        app:layout_constraintTop_toBottomOf="@+id/tv_create_title"
